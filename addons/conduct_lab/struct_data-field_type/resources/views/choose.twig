<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('conduct_lab.field_type.struct_data::message.choose_structured_datum') }}</h4>
</div>
<div class="modal-body">

    {% include "streams::modals/filter" %}

    {% if not structured_data.isEmpty() %}
        <ul class="nav nav-pills nav-stacked">
            {% for structured_datum in structured_data %}
                <li class="nav-item">
                    <a href="{{ url_to('/streams/struct_data-field_type/form/' ~ route_parameter('field')) }}/{{ structured_datum.namespace }}?prefix={{ request_get('prefix') }}"
                       class="add-row nav-link has-click-event">
                        <strong>{{ trans(structured_datum.title) }}</strong>
                        <br>
                        <small>{{ trans(structured_datum.description) }}</small>
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        {{ trans('streams::message.no_results') }}
    {% endif %}
</div>
